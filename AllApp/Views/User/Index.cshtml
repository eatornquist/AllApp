@model List<User>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                User List
            </h2>
        </div>
        <div class="col-6">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary" style="float:right"><i class="bi bi-plus-circle"></i> Create new user</a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                User email
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Email</td>
            </tr>
        }
    </tbody>
</table>

</div>
