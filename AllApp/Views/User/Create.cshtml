@model User //No User object is passed from the controller, so with this User defined in this class, it will be created a new empty User object, that is what we want in this case.

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create User</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Email" class="p-0"></label>
            <input asp-for="Email" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="EmailConfirmed" class="p-0"></label>
            <input asp-for="EmailConfirmed" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Password" class="p-0"></label>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="PasswordConfirmed" class="p-0"></label>
            <input asp-for="PasswordConfirmed" class="form-control" />
        </div>
        
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6">
                <a asp-controller="User" asp-action="Index" class="btn btn-secundary border form-control">
                    Back to List
                </a>
            </div>
        </div>                          
    </div>
</form>