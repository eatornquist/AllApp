@model List<Image>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-4">
            <h2 class="text-primary">
                Image List
            </h2>
        </div>
        <div class="col-4">

        </div>
        <div class="col-4">
            <a asp-controller="" asp-action="" style="float:right" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Upload an Image</a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Image Name
        </th>
        <th>
            Image Description
        </th>
        <th>
            Image Address
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var img in Model.OrderBy(u=>u.Id))
        {
        <tr>
            <td>@img.Name</td>
            <td>@img.Description</td>
            <td>@img.Address</td>
        </tr>
        }
    </tbody>
</table>

</div>